# Application settings
NODE_ENV=production
PORT=5000

# Docker settings
DOCKERHUB_USERNAME=yourusername

# Database settings
MONGODB_URI=mongodb://mongodb:27017/horsey
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=secure_password

# Secret keys
JWT_SECRET=your_jwt_secret_key
SESSION_SECRET=your_session_secret_key

# Lichess OAuth settings
LICHESS_CLIENT_ID=your_lichess_client_id
LICHESS_CLIENT_SECRET=your_lichess_client_secret
LICHESS_REDIRECT_URI=https://your-domain.com/lichess/auth/callback
LICHESS_SCOPES=challenge:read challenge:write

# Email settings
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_SERVICE=Gmail

# Admin settings
INITIAL_ADMIN_USERNAME=admin
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=secure_admin_password

# Frontend URL
FRONTEND_URL=https://your-frontend-domain.com

# Rate limiting
RATE_LIMIT_API=100
RATE_LIMIT_AUTH=5
RATE_LIMIT_BET=10

# CORS settings
ADDITIONAL_CORS_ORIGINS=https://additional-origin.com,https://another-origin.com

